<Window x:Class="RecipeManagerWPF.AddIngredientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ingredient" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ingredient Name"/>
            <TextBox x:Name="txtIngredientName"/>

            <TextBlock Text="Quantity"/>
            <TextBox x:Name="txtQuantity"/>

            <TextBlock Text="Unit"/>
            <TextBox x:Name="txtUnit"/>

            <TextBlock Text="Calories"/>
            <TextBox x:Name="txtCalories"/>

            <TextBlock Text="Food Group"/>
            <TextBox x:Name="txtFoodGroup"/>

            <Button Content="OK" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

